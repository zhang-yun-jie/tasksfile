{
  "name": "@zhangyunjie/tasksfile",
  "version": "5.1.1",
  "description": "Minimalistic task runner for node.js",
  "author": "zhangyunjie <1520420636@qq.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "build",
    "system",
    "make",
    "tool"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "task": "bin/task.js"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/*.ts' 'test/**/*.ts'",
    "build": "tsc",
    "test": "npm lint && npm build && npm clean:sandbox && jest --coverage",
    "test:unit": "jest ./src/",
    "test:e2e": "jest ./test/",
    "clean": "rm -rf node_modules && npm clean:build && npm clean:sandbox",
    "clean:build": "rm -rf ./lib",
    "clean:sandbox": "rm -rf ./test/e2e/sandbox/node_modules && mkdir -p ./test/sandbox/node_modules/.bin",
    "sandbox:task": "cd ./test/sandbox && ../../bin/task.js"
  },
  "dependencies": {
    "@zhangyunjie/cli": "2.0.4",
    "@zhangyunjie/shell": "2.0.0",
    "chalk": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-typescript": "7.1.0",
    "@types/jest": "24.0.0",
    "@types/lodash.padend": "4.6.4",
    "@types/node": "10.12.18",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.2.2"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  }
}
